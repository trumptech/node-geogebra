{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "dist",
    "target": "ESNEXT",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmit": false,
    "allowJs": true,
    "outDir": "dist",
    "strictNullChecks": false,
    "lib": ["es6", "dom", "es2016", "es2017"],
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
